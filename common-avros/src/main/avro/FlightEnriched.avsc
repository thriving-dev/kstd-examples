{
  "type": "record",
  "name": "FlightEnriched",
  "namespace": "dev.thriving.poc.avro",
  "fields": [
    {
      "name": "flightNumber",
      "type": "string",
      "doc": "The flight number."
    },
    {
      "name": "departureDate",
      "type": "string",
      "doc": "The date of departure in ISO 8601 format (YYYY-MM-DD)."
    },
    {
      "name": "airline",
      "type": "string",
      "doc": "The airline operating the flight."
    },
    {
      "name": "departureAirport",
      "type": "string",
      "doc": "The IATA code of the departure airport."
    },
    {
      "name": "arrivalAirport",
      "type": "string",
      "doc": "The IATA code of the arrival airport."
    },
    {
      "name": "departureTime",
      "type": "string",
      "doc": "The scheduled departure time in ISO 8601 format."
    },
    {
      "name": "arrivalTime",
      "type": "string",
      "doc": "The scheduled arrival time in ISO 8601 format."
    },
    {
      "name": "flightCategory",
      "type": {
        "type": "enum",
        "name": "FlightCategory",
        "symbols": [
          "PASSENGER",
          "FREIGHT",
          "GOVERNMENT",
          "PRIVATE_JET",
          "MILITARY",
          "EMERGENCY",
          "OTHER"
        ],
        "doc": "The category or type of flight."
      }
    },
    {
      "name": "departureAirportInfo",
      "type": ["null", "AirportInfoI18n"],
      "default": null,
      "doc": "Information on the departure airport (i18n)."
    },
    {
      "name": "arrivalAirportInfo",
      "type": ["null", "AirportInfoI18n"],
      "default": null,
      "doc": "Information on the arrival airport (i18n)."
    }
  ]
}
